
@{
    ViewData["Title"] = "DangKy";
}

@model TaiKhoanViewModel

<div class="container">
    <h3>Đăng ký</h3>
    <form method="post">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" type="text" class="form-control" />

        <label asp-for="Age">Age:</label>
        <input asp-for="Age" type="text" class="form-control" />

        <label asp-for="Username">Username:</label>
        <input asp-for="Username" type="text" class="form-control" />

        <label asp-for="Password">Password:</label>
        <input asp-for="Password" type="password" class="form-control" />

        <button type="submit" class="btn btn-primary">Đăng ký</button>

        @if (Model != null)
        {
            <p>Username đã nhập: @Model.Username</p>
            <p>Password sau mã hoá: @Model.Password</p>
        }
    </form>
    <footer>
        <p>Copyright &copy; BaiKiemTra01 - @DateTime.Now.Year</p>
    </footer>
</div>
