
@model IEnumerable<SanPham>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Mô tả</th>
                <th>Giá</th>
                <th>Hình ảnh</th>
                <th>Thể loại</th>
                <th>
                    Chức năng
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.price</td>
                    <td><img src="@item.ImageUrl" width="50%"/></td>
                    <td>@item.TheLoai.Name</td>
                </tr>
                <td>
                    <a asp-action="Upsert" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details">Details</a> |
                    <a asp-action="Delete">Delete</a> |
                </td>
            }
        </tbody>
    </table>
</div>

